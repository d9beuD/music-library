{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row align-items-center">
            <div class="col-auto">
                <a class="btn btn-danger rounded-pill" href="{{ path('app_artist_index') }}">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
            </div>

            <div class="col">
                <h1>Artist</h1>
            </div>

            <div class="col-auto">
                <div class="row gx-1">
                    <div class="col-auto">
                        <a class="btn btn-danger rounded-pill" href="{{ path('app_artist_edit', {'id': artist.id}) }}">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                    </div>
                    <div class="col-auto">
                        {{ include('artist/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ artist.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ artist.name }}</td>
                </tr>
                <tr>
                    <th>Thumbnail</th>
                    <td>{{ artist.thumbnail }}</td>
                </tr>
                <tr>
                    <th>Bio</th>
                    <td>{{ artist.bio }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
