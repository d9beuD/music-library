{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row align-items-center mb-2">
            <div class="col-auto me-auto">
                <a class="btn btn-danger rounded-pill" href="{{ path('app_album_index') }}">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
            </div>

            <div class="col-auto">
                <div class="row gx-1">
                    <div class="col-auto">
                        <a class="btn btn-danger rounded-pill" href="{{ path('app_album_edit', {'id': album.id}) }}">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                    </div>
                    <div class="col-auto">
                        {{ include('album/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-auto">
                <img 
                    class="img-fluid rounded thumbnail" 
                    src="{{ album.thumbnail }}" 
                    alt="Album thumbnail"
                    style="height: 10rem; width: 10rem;"
                >
            </div>
            <div class="col">
                <h1 class="mb-0">{{ album.title }}</h1>
                <div class="text-secondary">
                    <p>{{ album.releaseDate ? album.releaseDate|date('d/m/Y') : '' }} • {{ album.tracks | length }} morceaux</p>
                </div>
                <button class="btn btn-danger">
                    <i class="fa-solid fa-play"></i>
                    Lecture
                </button>
                <button class="btn btn-danger">
                    <i class="fa-solid fa-shuffle"></i>
                    Aléatoire
                </button>
            </div>
        </div>

        <ul class="bg-white border rounded list-unstyled track-list overflow-hidden">
            {% for track in album.tracks %}
                <li class="px-3 py-1">
                    <div class="row">
                        <div class="col">
                            {{ track.title }}
                        </div>
                        <div class="col-auto">
                            {{ track.readableDuration }}
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}
