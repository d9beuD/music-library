{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row align-items-center mb-2">
            <div class="col-auto me-auto">
                <a class="btn btn-danger rounded-pill" href="{{ path('app_album_index') }}">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
            </div>
            
            {% if is_granted('IS_AUTHENTICATED')  %}
                <div class="col-auto">
                    <div class="row gx-1">
                        <div class="col-auto">
                            <a class="btn btn-danger rounded-pill" href="{{ path('app_album_edit', {'id': album.id}) }}">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </div>
                        <div class="col-auto">
                            {{ include('album/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="row mb-3">
            <div class="col-sm-6 col-md-4 col-xl-3">
                <img 
                    class="img-fluid rounded ratio ratio-1x1 mb-2 border shadow-sm" 
                    src="{{ album.thumbnail }}" 
                    alt="Album thumbnail"
                    style="max-width: 20rem;"
                >
                <div class="text-secondary fw-bold">
                    <div class="text-uppercase">{{ album.tracks | length }} morceaux</div>
                    <div>{{ album.releaseDate ? album.releaseDate|date('d/m/Y') : '' }}</div>
                </div>
            </div>
            
            <div class="col">
                <h1 class="mb-0">{{ album.title }}</h1>
                <h2 class="h3 text-danger mb-3">{{ album.artist.name }}</h2>

                <div class="mb-4">
                    <button class="btn btn-danger">
                        <i class="fa-solid fa-play"></i>
                        Lecture
                    </button>
                    <button class="btn btn-danger">
                        <i class="fa-solid fa-shuffle"></i>
                        Al√©atoire
                    </button>
                </div>

                <ul class="bg-white border rounded list-unstyled track-list overflow-hidden">
                    {% for track in album.tracks %}
                        <li class="px-3 py-1">
                            <div class="row">
                                <div class="col">
                                    {{ track.title }}
                                </div>
                                <div class="col-auto">
                                    {{ track.readableDuration }}
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
